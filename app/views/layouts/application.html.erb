      <!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
        <head>
          <meta charset="utf-8" />

          <!-- Uncomment to make IE8 render like IE7 -->
          <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

          <!-- Set the viewport width to device width for mobile -->
          <meta name="viewport" content="width=device-width, initial-scale=1.0" />

          <title><%= content_for?(:title) ? yield(:title) : "CampusBuzz" %></title>

          <!-- Included CSS Files -->
          <%= stylesheet_link_tag    "application" %>

          <!-- Included JS Files  -->
          <%= javascript_include_tag "application" %>
          <script src="jquery.dotdotdot.js" type="text/javascript"></script>

          <%= csrf_meta_tags %>
        </head>

        <body>

          <div class="container top-bar">
            <div class="row">
              <div class="four columns centered center-align">
                <h2>Campus Buzz</h2>
              </div>
            </div>
          </div>

          <div class="container top-bar-divider">
          </div>

          <div class="row">
            <!--
            <div class="three columns">
              <%= render 'shared/sidePanel' %>
            </div>
            -->
            <div class="nine columns centered">
              <%= yield %>
            </div>
          </div>

        </body>

      </html>
